{
    "xsappname": "<%= projectName %>",
    "tenant-mode": "shared",
    "scopes": [
        {
            "name": "$XSAPPNAME.Callback",
            "description": "With this scope set, the callbacks for tenant onboarding, offboarding and getDependencies can be called.",
            "grant-as-authority-to-apps": [
                "$XSAPPNAME(application,sap-provisioning,tenant-onboarding)"
            ]
        },
        {
            "name": "$XSAPPNAME.Admin",
            "description": "Admin"
        },
        {
            "name": "$XSAPPNAME.User",
            "description": "User"
        }
    ],
    "role-templates": [
        {
            "name": "Admin",
            "description": "Admin",
            "scope-references": [
                "$XSAPPNAME.Admin"
            ]
        },
        {
            "name": "User",
            "description": "User",
            "scope-references": [
                "$XSAPPNAME.User"
            ]
        }
    ],
    "role-collections": [
        {
            "name": "<%= projectName %>_Admin",
            "description": "<%= displayName %> Admin",
            "role-template-references": [
                "$XSAPPNAME.Admin",
                "$XSAPPNAME.User"
            ]
        },
        {
            "name": "<%= projectName %>_User",
            "description": "<%= displayName %> User",
            "role-template-references": [
                "$XSAPPNAME.User"
            ]
        }
    ],
    "oauth2-configuration": {
        "token-validity": 3600,
        "redirect-uris": [
<% if(customDomain){ -%>
            "https://*-<%= projectName %>.<%= customDomain %>/login/callback"
<% } else { -%>
            "https://*-<%= projectName %>.cfapps.*.hana.ondemand.com/login/callback"
<% } -%>
        ]
    }
}