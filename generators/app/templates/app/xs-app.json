{
    "welcomeFile": "index.html",
    "authenticationMethod": "route",
    "routes": [
        {
            "source": "^/srv/(.*)$",
            "authenticationType": "xsuaa",
            "scope": "$XSAPPNAME.User",
            "destination": "srv"
        },
<% if(sqlite){ -%>
        {
            "source": "^/sqlite/(.*)$",
<% if(providerSubdomain == "unknown"){ -%>
            "authenticationType": "xsuaa",
            "scope": "$XSAPPNAME.User",
<% } else { -%>
            "authenticationType": "none",
<% } -%>
            "destination": "sqlite"
        },
<% } -%>
        {
            "source": "^/(.*)",
            "authenticationType": "none",
            "localDir": "resources"
        }
    ]
}
